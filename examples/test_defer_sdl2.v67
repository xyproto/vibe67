import sdl3 as sdl

width = 620
height = 387

sdl.SDL_Init(sdl.SDL_INIT_VIDEO) or! {
    exitf("SDL_Init failed\n")
}
defer sdl.SDL_Quit()

window = sdl.SDL_CreateWindow("Test", width, height, 0) or! {
    exitf("Window failed\n")
}
defer sdl.SDL_DestroyWindow(window)

println("Created window, cleaning up")

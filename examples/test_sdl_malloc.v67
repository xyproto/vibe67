import sdl3 as sdl

cstruct SDL_Event {
    type as uint32,
    timestamp as uint64
}

sdl.SDL_Init(sdl.SDL_INIT_VIDEO) or! {
    exitf("Init failed\n")
}

event := c.malloc(192)
printf("Allocated event at: %.0f\n", event)

result := sdl.SDL_PollEvent(event)
printf("Poll result: %.0f\n", result)

c.free(event)
sdl.SDL_Quit()

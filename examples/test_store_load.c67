import sdl3 as sdl

sdl.SDL_Init(sdl.SDL_INIT_VIDEO) or! {
    exitf("SDL_Init failed\n")
}
defer sdl.SDL_Quit()

// Create window and immediately use it WITHOUT storing in variable
renderer = sdl.SDL_CreateRenderer(sdl.SDL_CreateWindow("Test", 640, 480, 0), 0)

renderer or! {
    exitf("Failed to create renderer: %s\n", sdl.SDL_GetError())
}

printf("Success - renderer created!\n")
